<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dm"
    android:orientation="vertical"
    tools:context=".ui.activities.MainActivity">


    <TextView
        android:id="@+id/textView2"
        style="@style/textTitle"
        android:layout_width="371dp"
        android:layout_height="94dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="left"
        android:text="@string/app_name_menu"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="41dp" />

    <Button
        android:id="@+id/button2"
        style="@style/ButtonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Soy un botón de cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.758"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_buscar"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonsGeneral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="Soy un botón"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_buscar"
        app:layout_constraintVertical_bias="0.027" />

    <TextView
        android:id="@+id/txt_buscar"
        android:layout_width="274dp"
        android:layout_height="39dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:backgroundTint="#FFFFFF"
        android:gravity="center_vertical"
        android:text="Search"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/banner_principal"
        android:layout_width="33dp"
        android:layout_height="39dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/txt_buscar"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/baseline_tune_24" />

    <Button
        android:id="@+id/button3"
        style="@style/ButtonMenu"
        android:layout_width="52dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@+id/banner_principal"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>