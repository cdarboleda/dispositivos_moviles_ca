<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colormarvel"
    android:orientation="vertical"
    tools:context=".ui.activities.DetailsMarvelItem">

    <TextView
        android:id="@+id/marveltitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/satisfy"
        android:text="MARVEL"
        android:background="@color/azulmarvel"
        android:textAlignment="center"
        android:textColor="@color/redmarvel"
        android:textSize="32sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgMarvel"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_margin="35dp" >


    </ImageView>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/satisfy"
        android:textAlignment="center"
        android:textColor="@color/principal_color_dm"
        android:textSize="24sp"
        android:textStyle="bold">


    </TextView>

    <TextView
        android:id="@+id/marvel_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/white"/>

</LinearLayout>